<div class="row customer_details">
	<div class="col-md-6 col-md-offset-3 well">
		<%= form_for @extra_reservation, url: wizard_path, :method => :put do |f| %>
		
		<h3>Would you Like to to Reserve a Restaurant Table?</h3>
		
		<div class="form-group">
			<%= f.label :restaurant_id %><br>
			<%= f.collection_select :restaurant_id, Restaurant.order(:name), :id, :name, :include_blank => "Select one Restaurant" %>
		</div>
		<div class="form-group">
			<%= f.label :visitingdate, 'Visiting Date' %><br>
			<%= f.datetime_select :visitingdate %>
		</div>
		<div class="form-group">
			<%= f.label :numberofguest, 'Number of Guests' %><br>
			<%= f.select :numberofguest, ["1", "2", "3", "4", "5", "6", "7", "8", "9"], :include_blank => "Select Number of Guests" %>
		</div>
		<div class="form-group">
			<%= f.label :specialrequirement, 'Any Special Requirements?' %><br>
			<%= f.text_field :specialrequirement %>
		</div>

		<div class="actions col-md-8 col-md-offset-2">
			<%= f.submit "Save and Continue" %>
			or <%= link_to "Skip this Service", next_wizard_path %>
		</div>
		<% end %>
		
	</div>
</div>