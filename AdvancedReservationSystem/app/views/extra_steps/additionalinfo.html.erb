<div class="row customer_details">
	<div class="col-md-6 col-md-offset-3 well">
		<%= form_for @extra_reservation, url: wizard_path, :method => :put do |f| %>
		
		<h3>Please provide any additional information redarding your booking</h3>

		<div class="form-group">
			<%= f.label :additionalinfo, 'Additional Info' %><br>
			<%= f.text_area :additionalinfo %>
		</div>

		<div class="actions col-md-8 col-md-offset-2">
			<%= f.submit "Reserve all Extra Service" %>
		</div>
		<% end %>
		
	</div>
</div>