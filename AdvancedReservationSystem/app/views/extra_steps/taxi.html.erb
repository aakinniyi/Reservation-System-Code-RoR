<div class="row customer_details">
	<div class="col-md-6 col-md-offset-3 well">
		<%= form_for @extra_reservation, url: wizard_path, :method => :put do |f| %>
		
		<h3>Would you Like to to Reserve a Taxi?</h3>
		
		<div class="form-group">
			<%= f.label :arrival_airport_id, 'Arrival Airport' %><br>
			<%= f.collection_select :arrival_airport_id, Airport.order(:name), :id, :name, :include_blank => "Select one Arrival Airport" %>
		</div>
		<div class="form-group">
			<%= f.label :otherdestination, 'Destination' %><br>
			<%= f.text_field :otherdestination %>
		</div>
		<div class="form-group">
			<%= f.label :pickup, 'Arrival or Pickup Time' %><br>
			<%= f.datetime_select :pickup %>
		</div>
		<div class="form-group">
			<%= f.label :numberofpassanger, 'Number of Passanger' %><br>
			<%= f.select :numberofpassanger, ["1", "2", "3", "4", "5", "6", "7", "8", "9"], :include_blank => "Select Number of Passagers" %>
		</div>
		<div class="actions col-md-8 col-md-offset-2">
			<%= f.submit "Save and Continue" %>
			or <%= link_to "Skip this Service", next_wizard_path %>
		</div>
		<% end %>
	</div>
</div>